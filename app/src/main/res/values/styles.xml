<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="FABStyle">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/cabin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="NavigationTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/tabLayoutColor</item>
        <item name="tabSelectedTextColor">@color/homeworkColor</item>
        <item name="fontFamily">@font/cabin_bold</item>
        <item name="tabIndicatorColor">@color/homeworkColor</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_slide_up</item>
        <item name="android:windowExitAnimation">@anim/fade_slide_down</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetRoundedCorners</item>
    </style>

    <style name="BottomSheetRoundedCorners"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

    <style name="ChipTextRegular" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/cabin_regular</item>
    </style>

    <style name="ChipTextBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

</resources>