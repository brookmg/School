<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        app:liftOnScroll="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chevron_left" />

            <com.antonyt.infiniteviewpager.InfiniteViewPager
                android:id="@+id/viewPagerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/buttonCheck"
                android:layout_toEndOf="@id/buttonBack"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cabin_bold" />

            <ImageView
                android:id="@+id/buttonCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_regular"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                android:background="@null"
                android:hint="@string/title"
                android:id="@+id/editTextTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:fontFamily="@font/cabin_bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/editTextTitle"
                android:layout_margin="24dp"
                android:id="@+id/textViewSubjectLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:fontFamily="@font/cabin_bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/textViewSubjectLabel"
                app:layout_constraintBottom_toBottomOf="@id/textViewSubjectLabel"
                android:layout_margin="24dp"
                android:id="@+id/textViewSubjectPicked"
                app:layout_constraintEnd_toEndOf="parent" />

            <HorizontalScrollView android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewSubjectLabel"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/scrollViewSubjectChoices">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_subject"
                        android:fontFamily="@font/cabin_regular"
                        app:chipIcon="@drawable/ic_chip_subject"
                        app:chipStrokeColor="@color/chipStrokeColor"
                        app:chipStrokeWidth="1dp"
                        app:chipBackgroundColor="#FFF"/>

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:fontFamily="@font/cabin_bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/scrollViewSubjectChoices"
                android:layout_margin="24dp"
                android:id="@+id/textViewDateLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:fontFamily="@font/cabin_bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/textViewDateLabel"
                app:layout_constraintBottom_toBottomOf="@id/textViewDateLabel"
                android:layout_margin="24dp"
                android:id="@+id/textViewDatePicked"
                app:layout_constraintEnd_toEndOf="parent" />

            <HorizontalScrollView android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewDateLabel"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/scrollViewDateChoices">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_date"
                        android:fontFamily="@font/cabin_regular"
                        app:chipIcon="@drawable/ic_chip_pick_date"
                        app:chipStrokeColor="@color/chipStrokeColor"
                        app:chipStrokeWidth="1dp"
                        app:chipBackgroundColor="#FFF"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today"
                        android:fontFamily="@font/cabin_regular"
                        app:chipIcon="@drawable/ic_chip_today_tomorrow"
                        app:chipStrokeColor="@color/chipStrokeColor"
                        app:chipStrokeWidth="1dp"
                        app:chipBackgroundColor="#FFF"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tomorrow"
                        android:fontFamily="@font/cabin_regular"
                        app:chipIcon="@drawable/ic_chip_today_tomorrow"
                        app:chipStrokeColor="@color/chipStrokeColor"
                        app:chipStrokeWidth="1dp"
                        app:chipBackgroundColor="#FFF"/>

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scrollViewDateChoices"
                android:id="@+id/constraintLayoutMore"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtasks"
                    android:fontFamily="@font/cabin_bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="24dp"
                    android:id="@+id/textViewSubtaskLabel"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listViewSubtasks"
                    app:layout_constraintTop_toBottomOf="@id/textViewSubtaskLabel"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    app:layout_constraintTop_toBottomOf="@id/listViewSubtasks"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="36dp"
                    app:icon="@drawable/fab_add"
                    android:id="@+id/buttonAddSubtask"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    android:fontFamily="@font/cabin_bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/buttonAddSubtask"
                    android:layout_margin="24dp"
                    android:id="@+id/textViewNotesLabel"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewNotesLabel"
                    android:layout_width="0dp"
                    android:id="@+id/editTextNotes"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_note_here"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    android:fontFamily="@font/cabin_regular"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/show_more"
                app:layout_constraintTop_toBottomOf="@id/scrollViewDateChoices"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>